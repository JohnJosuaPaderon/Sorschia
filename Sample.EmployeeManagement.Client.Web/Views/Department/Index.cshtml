@model EmployeeManagement.Client.Web.Models.Department.IndexModel;
@{
    ViewData["Title"] = "Add new Department";
}

<form asp-action="Details" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>Add new Employee</h1>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" value="@Model.Department.Id" />
        </div>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" value="@Model.Department.Name" />
        </div>
        <hr />
        <input type="submit" value="Save" class="btn btn-lg" />
    </div>
</form>